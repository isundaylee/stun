cxx_library(
  name = 'cryptopp',
  header_namespace = 'cryptopp',
  exported_headers = subdir_glob([
    ('cryptopp', '*.h'),
  ]),
  srcs = glob([
    'cryptopp/*.cpp',
  ],
  excludes = [
    'cryptopp/test.cpp',
  ]),
  visibility = [
    'PUBLIC',
  ],
)

